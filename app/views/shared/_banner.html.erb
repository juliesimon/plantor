<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),url('<%= image_path "plant_background.jpg", class: "background-image" %>');">
  <div class="banner-home">
    <h2> Plantor</h2>
    <p>Rent beautiful plants from people around you</p>
    <div class="search">
      <div class="search-bar-home">
          <%= form_tag plants_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Christmas Tree"
            %>
          <% end %>
        </div>
        <div class="start-button">
          <%= link_to "Find a plant", plants_path(@plant), class: "btn-home" %>
        </div>
    </div>
  </div>
</div>
