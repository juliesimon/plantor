<div class="book-form">
  <h4>Book this plant</h4>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for [@plant, @booking] do |f| %>
      <%= f.error_notification %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <div class="total-price hidden">
        <div class="total-price-computation"></div>
        <div class="total-price-result"></div>
      </div>
      <%= f.submit "Book it", id: "btn-no-padding", class: "btn-secondary form-button" %>
      <% end %>
    </div>
  </div>
</div>
