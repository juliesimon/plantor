<%= simple_form_for @plant do |f| %>
  <%= f.input :name, label: 'Name', placeholder: 'Cute, easy-going cactus'%>
  <%= f.input :instruction, label: 'Instruction', placeholder: 'This cactus is easy to take-care of. It needs to stay away from direct light but still be in a sunny room. Almost never water it !' %>
  <%= f.input :price_per_day, label: 'Price per day (â‚¬)', placeholder: '2' %>
  <%= f.input :address, label: 'Location of the plant', placeholder: '23 rue du Terreau, 93260 Les Lilas'  %>
  <%= f.input :category, collection: Plant::CATEGORIES, prompt: "Select a category" %>
  <%= f.input :photo, label: 'Add a Photo' %>
  <%= f.input :photo_cache, as: :hidden %>
  <% if @plant.id.present? %>
    <%= f.submit "Edit your plant", id: "#btn-no-padding", class: "btn-secondary form-button" %>
  <% else %>
    <%= f.submit "Add your plant", id: "#btn-no-padding", class: "btn-secondary form-button" %>
  <% end %>
<% end %>
