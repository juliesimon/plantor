<h1><%= @plant.name %></h1>

<%= simple_form_for [@plant, @booking] do |f| %>
  <%= "Price per day of plant: #{@plant.price_per_day}â‚¬" %>
  <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.submit "Book this plant" %>
<% end %>

<h3> Bookings :</h3>
<ul><% @plant.bookings.each do |booking| %>
    <li>
      <%= "Booked by #{booking.user.email} from #{booking.starts_at.strftime("%A, %b %d")} to #{booking.ends_at.strftime("%A, %b %d")}"  %>
    </li>
  <% end %>
</ul>
